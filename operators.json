            $dateToString: {
              format: "%w",
              date: "$Birthday"
            }
          },
          YearOfBirth: {
            $year: "$Birthday"
          },
          MonthOfBirth: {
            $month: "$Birthday"
          },
          DayOfBirth: {
            $dayOfMonth: "$Birthday"
          },
          Hours: {
            $hour: "$CreatedAt"
          },
          Minutes: {
